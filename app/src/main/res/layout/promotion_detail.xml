<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.promotion.PromotionDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/promotion_detail_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/arrow_left" />

        <!-- 신청하기 버튼 -->
        <android.widget.Button
            android:id="@+id/promotion_apply_btn"
            android:layout_width="77dp"
            android:layout_height="48dp"
            android:layout_marginLeft="309dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/btn_round_blue_box"
            android:text="신청하기"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <!-- 이미지 -->
        <ImageView
            android:id="@+id/image_promotion"
            android:layout_width="344dp"
            android:layout_height="200dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="135dp"
            android:background="@drawable/gray_round"
            android:scaleType="centerCrop" />

        <!-- 글 제목 -->
        <TextView
            android:id="@+id/promotion_detail_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:gravity="center_horizontal"
            android:text="모임의 이름"
            android:textColor="#3c3c3c"
            android:textSize="25sp"
            android:textStyle="bold" />


        <!-- 돈 이미지 -->
        <ImageView
            android:id="@+id/image_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57.2dp"
            android:layout_marginTop="460dp"
            android:background="@drawable/promotion_detail_money" />

        <!-- 회비 텍스트 -->
        <TextView
            android:id="@+id/text_membership_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="454dp"
            android:text="회비"
            android:textColor="#3c3c3c"
            android:textSize="18sp" />

        <!-- 회비 액수 -->
        <TextView
            android:id="@+id/text_membership_fee_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="199dp"
            android:layout_marginTop="454dp"
            android:text="100,000원"
            android:textColor="#3c3c3c"
            android:textSize="18sp" />

        <!-- 면접 아이콘 -->
        <ImageView
            android:id="@+id/image_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="59.8dp"
            android:layout_marginTop="493.8dp"
            android:background="@drawable/promotion_detail_recruit" />

        <!-- 면접 텍스트 -->
        <TextView
            android:id="@+id/text_interview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="489dp"
            android:text="면접"
            android:textColor="#3c3c3c"
            android:textSize="18sp" />

        <!-- 면접 상태 -->
        <TextView
            android:id="@+id/text_interview_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="199dp"
            android:layout_marginTop="489dp"
            android:text="없음"
            android:textColor="#3c3c3c"
            android:textSize="18sp" />

        <!-- 시계 아이콘 -->
        <ImageView
            android:id="@+id/image_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_person"
            android:layout_marginLeft="59.8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/promotion_detail_clock" />

        <!-- 모집기간 텍스트 -->
        <TextView
            android:id="@+id/text_recruitment_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="524dp"
            android:text="모집기간"
            android:textColor="#3c3c3c"
            android:textSize="18sp" />

        <!-- 날짜 텍스트 -->
        <TextView
            android:id="@+id/promotion_detail_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="199dp"
            android:layout_marginTop="524dp"
            android:text="날짜"
            android:textColor="#3c3c3c"
            android:textSize="18sp" />

        <!-- 여러 사람들 아이콘 -->
        <ImageView
            android:id="@+id/image_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="59.8dp"
            android:layout_marginTop="565.2dp"
            android:background="@drawable/promotion_detail_people" />

        <!-- 모집인원 텍스트 -->
        <TextView
            android:id="@+id/text_recruitment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="559dp"
            android:text="구성인원"
            android:textColor="#3c3c3c"
            android:textSize="18sp" />

        <!-- 모집인원 수 -->
        <TextView
            android:id="@+id/text_recruitment_count_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="199dp"
            android:layout_marginTop="560dp"
            android:text="23"
            android:textColor="#3c3c3c"
            android:textSize="18sp" />

        <!--        &lt;!&ndash; 모집인원 : 명 &ndash;&gt;-->
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="명"-->
        <!--            android:textSize="18sp"-->
        <!--            android:textColor="#3c3c3c"-->
        <!--            android:layout_marginLeft="230dp"-->
        <!--            android:layout_marginTop="560dp" />-->

        <!--ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ 상단 선 ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ -->
        <View
            android:id="@+id/view_separator"
            android:layout_width="428dp"
            android:layout_height="1dp"
            android:layout_marginTop="615dp"
            android:background="#dfdfdf" />

        <!-- TabLayout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_separator"
            android:background="@color/white"
            app:tabTextAppearance="@style/TabTextStyle">

            <!--소개-->
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소개" />

            <!--캘린더-->
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캘린더" />

            <!--채팅-->
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_chatting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채팅" />

        </com.google.android.material.tabs.TabLayout>

        <!-- 소개 탭의 내용 -->
        <LinearLayout
            android:id="@+id/layout_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!--            &lt;!&ndash; 한줄소개 &ndash;&gt;-->
            <!--            <TextView-->
            <!--                android:id="@+id/text_one_line_intro"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="한 줄 소개"-->
            <!--                android:textSize="20sp"-->
            <!--                android:textStyle="bold"-->
            <!--                android:textColor="@color/blue"-->
            <!--                />-->

            <!--            &lt;!&ndash; 한줄소개 상세내용 &ndash;&gt;-->
            <!--            <TextView-->
            <!--                android:id="@+id/text_one_line_intro_details"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="한줄소개 상세내용"-->
            <!--                android:textSize="16sp"-->
            <!--                android:layout_marginTop="10dp" />-->

            <!-- 동아리 소개&활동계획 -->
            <TextView
                android:id="@+id/text_club_intro_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="동아리 소개 및 활동계획"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 동아리 소개&활동계획 상세내용 -->
            <TextView
                android:id="@+id/text_club_intro_activities_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="동아리 소개 및 활동계획 상세내용"
                android:textSize="16sp" />

            <!-- 모집대상 -->
            <TextView
                android:id="@+id/text_recruitment_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="모집대상"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 모집대상 상세내용 -->
            <TextView
                android:id="@+id/text_recruitment_target_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="모집대상 상세 내용"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- 캘린더 탭의 내용 -->
        <LinearLayout
            android:id="@+id/layout_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_layout"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/schedule"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:src="@drawable/plusicon"/>

            <!-- 캘린더 뷰 -->

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false" />

            <TextView
                android:id="@+id/scheduleList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <!-- 채팅 탭의 내용 -->
        <LinearLayout
            android:id="@+id/layout_chatting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_separator"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/promotion_no_chat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="@drawable/promotion_can_t_chat" />


            <ImageButton
                android:id="@+id/promotion_add_chat_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/promotion_add_chat_room_icon"

                />
            <!-- 채팅방 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_chat_room_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>


    </RelativeLayout>
</ScrollView>
