<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.promotion.PromotionPage">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="53dp"
            android:background="#00000000"
            android:src="@drawable/arrow_left"></ImageView>

        <android.widget.Button
            android:id="@+id/button_next5"
            android:layout_width="77dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/btn_round_blue_box"
            android:text="신청하기"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="326dp"
            android:layout_marginRight="107dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11sp"
            android:text="동아리 이름"
            android:textColor="#3c3c3c"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="103dp"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="389dp"
            app:tabIndicatorColor="#00000000"
            app:tabSelectedTextColor="#3c3c3c"
            app:tabTextColor="#939393"
            app:tabTextAppearance="@style/tab_font"
            >

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="후기" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_qa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q&amp;A" />

        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/information_tap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tap">
        </FrameLayout>

    </RelativeLayout>
</ScrollView>